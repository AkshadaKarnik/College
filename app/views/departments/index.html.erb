<h1>Department List ;D</h1>
<%= link_to 'Create', new_department_path, class:"btn btn-success" %>
<br/><br/>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Department Name</th>
      <th scope="col">Department Course</th>
      <th colspan="3" >Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |dept| %>
    <tr>
      <td><%= dept.name %></td>
      <td><%= dept.course %></td>
      <td><%= link_to 'show', department_path(dept), class:"btn btn-secondary" %></td>
      <td><%= link_to 'edit', edit_department_path(dept), class:"btn btn-secondary" %></td>
      <td><%= link_to 'delete', dept, data: {turbo_method: :delete,turbo_confirm: "Are you sure?" },  class:"btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>