<h1>College List :)</h1>
<%= link_to 'Create', new_college_path, class:"btn btn-success" %>
<br/><br/>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Address</th>
      <th scope="col">Contact</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @colleges.each do |clg| %>
    <tr>
      <td><%= clg.name %></td>
      <td><%= clg.email %></td>
      <td><%= clg.address %></td>
      <td><%= clg.contact %></td>
      <td><%= link_to 'show', college_path(clg), class:"btn btn-secondary" %></td>
      <td><%= link_to 'edit', edit_college_path(clg), class:"btn btn-secondary" %></td>
      <td><%= link_to 'delete', clg, data: {turbo_method: :delete,turbo_confirm: "Are you sure?" },  class:"btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>